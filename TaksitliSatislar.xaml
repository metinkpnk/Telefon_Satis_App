<Page x:Class="TelefonSatısApp.TaksitliSatislar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TelefonSatısApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TaksitliSatis"
      Background="#0F172A">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1E3A8A"/>
        <SolidColorBrush x:Key="CardBrush" Color="#111827"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#0B1221"/>
        <SolidColorBrush x:Key="TextLight" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#94A3B8"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#172554"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4,0,10"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>

        <!-- Başlık -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Padding="14,16" Background="{StaticResource SurfaceBrush}">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="0" Opacity="0.28"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="{StaticResource PrimaryBrush}"/>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="Taksitli Satış"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextLight}"/>
                        <TextBlock Text="Müşteri bilgilerini kaydedin, 1-6 ay taksit seçin."
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Arama Çubuğu -->
                <Border Grid.Column="1" 
                        Background="{StaticResource CardBrush}"
                        BorderBrush="#1E293B"
                        BorderThickness="1"
                        CornerRadius="10"
                        Margin="10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="AramaTextBox"
                                 Grid.Column="0"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextLight}"
                                 BorderThickness="0"
                                 Padding="12,8"
                                 FontSize="14"
                                 VerticalAlignment="Center"
                                 TextChanged="AramaTextBox_TextChanged"/>
                        
                        <TextBlock Grid.Column="0"
                                   Text="İsim soyisim ile ara..."
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="14"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=AramaTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <Button Grid.Column="1"
                                x:Name="TemizleButton"
                                Content="✕"
                                Width="30"
                                Height="30"
                                Margin="0,0,8,0"
                                Background="Transparent"
                                Foreground="{StaticResource TextMuted}"
                                BorderThickness="0"
                                FontSize="16"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="TemizleButton_Click"
                                VerticalAlignment="Center">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=AramaTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Text, ElementName=AramaTextBox}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                
                <Border Grid.Column="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="10,8"
                        Background="{StaticResource PrimaryDarkBrush}"
                        CornerRadius="12">
                    <TextBlock Text="{Binding ElementName=DataGridTaksitli, Path=Items.Count, StringFormat='Toplam {0} kayıt'}"
                               Foreground="{StaticResource TextLight}"
                               FontSize="13"
                               FontWeight="SemiBold"/>
                </Border>
            </Grid>
        </Border>

        <!-- Liste -->
        <Border Grid.Row="1" Grid.Column="0" Margin="10,16,8,16" Background="{StaticResource CardBrush}" CornerRadius="12" Padding="12">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid x:Name="DataGridTaksitli"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Background="{StaticResource CardBrush}"
                          Foreground="{StaticResource TextLight}"
                          RowBackground="#0F172A"
                          AlternatingRowBackground="#111827"
                          BorderBrush="#1F2937"
                          BorderThickness="1"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          MinWidth="1120">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,10"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Müşteri Adı Soyadı" Binding="{Binding MusteriAdSoyad}" Width="160">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#E5E7EB"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="📱 Marka" Binding="{Binding Marka}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#3B82F6"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="📱 Model" Binding="{Binding Model}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#3B82F6"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="🔧 Durum" Binding="{Binding Durum}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#10B981"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="📞 Telefon 1" Binding="{Binding Telefon1}" Width="110"/>
                    <DataGridTextColumn Header="📞 Telefon 2" Binding="{Binding Telefon2}" Width="110"/>
                    <DataGridTextColumn Header="📅 Taksit" Binding="{Binding TaksitSayisi}" Width="60"/>
                    <DataGridTextColumn Header="💰 Satış Fiyatı" Binding="{Binding SatisFiyati, StringFormat='{}{0:N0} ₺'}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#22C55E"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="💵 Ön Ödeme" Binding="{Binding OnOdeme, StringFormat='{}{0:N0} ₺'}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#F59E0B"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="💳 Aylık" Binding="{Binding AylikOdeme, StringFormat='{}{0:N0} ₺'}" Width="80">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#8B5CF6"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="📅 Satış Tarihi" Binding="{Binding Tarih, StringFormat='{}{0:dd.MM.yyyy}'}" Width="90"/>
                    <DataGridTextColumn Header="🗓️ Taksit Başlangıç" Binding="{Binding TaksitBaslangicTarihi, StringFormat='{}{0:dd.MM.yyyy}'}" Width="110">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#06B6D4"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,16,10,16" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Click="Button_Yenile"
                        Background="#0EA5E9"
                        Width="45" Height="42"
                        Margin="0,0,8,0"
                        ToolTip="Yenile">
                    <TextBlock Text="🔄" FontSize="16" Foreground="White"/>
                </Button>
                <Button Click="Button_ExcelExport"
                        Background="#22C55E"
                        Width="45" Height="42"
                        ToolTip="Excel'e Aktar">
                    <TextBlock Text="📊" FontSize="16" Foreground="White"/>
                </Button>
            </StackPanel>
            
            <Button Content="Satışı Düzenle"
                    Margin="0,0,0,10"
                    Click="Button_SatışıDüzenle"/>
            <Button Content="Satışı Sil"
                    Click="Button_SatışıSil"
                    Background="#DC2626">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#DC2626"/>
                        <Setter Property="Foreground" Value="#F9FAFB"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#7F1D1D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>


        </StackPanel>
    </Grid>
</Page>
