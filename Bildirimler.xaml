            </Border>

            <!-- Bildirim Listesi -->
            <Border Grid.Row="3" Background="{StaticResource CardBrush}" 
                    CornerRadius="12" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
