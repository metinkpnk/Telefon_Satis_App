                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Height="400">
                        <ItemsControl x:Name="BildirimListesi">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12" 
                                            Padding="16" 
                                            Background="{Binding BackgroundColor}"
                                            BorderBrush="{Binding BorderColor}"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Ä°kon -->
                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Icon}" 
                                                       FontSize="20" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,12,0"/>

                                            <!-- Bilgi -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding MusteriAdi}" 
                                                           Foreground="{StaticResource TextLight}" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Detay}" 
                                                           Foreground="{StaticResource TextMuted}" 
                                                           FontSize="12" 
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Tutar -->
                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding Tutar}" 
                                                       Foreground="{StaticResource TextLight}" 
                                                       FontSize="14" 
                                                       FontWeight="Bold" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,12,0"/>

                                            <!-- Durum -->
                                            <Border Grid.Column="3" 
                                                    Background="{Binding DurumColor}" 
                                                    CornerRadius="12" 
                                                    Padding="8,4">
                                                <TextBlock Text="{Binding DurumText}" 
                                                           Foreground="White" 
                                                           FontSize="11" 
                                                           FontWeight="SemiBold"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>


        </Grid>
    </ScrollViewer>
</Page>