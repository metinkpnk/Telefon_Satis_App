                    </StackPanel>
                    
                    <!-- Yenile ve Excel ButonlarÄ± -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="BtnYenile" 
                                Click="BtnYenile_Click"
                                Background="{StaticResource SuccessBrush}"
                                Width="45" Height="40" 
                                Margin="0,0,8,0"
                                ToolTip="Yenile">
                            <TextBlock Text="ðŸ”„" FontSize="16" Foreground="White"/>
                        </Button>
                        <Button x:Name="BtnExcel" 
                                Click="BtnExcel_Click"
                                Background="{StaticResource PrimaryBrush}"
                                Width="45" Height="40"
                                ToolTip="Excel'e Aktar">
                            <TextBlock Text="ðŸ“Š" FontSize="16" Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Ã–zet KartlarÄ± -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- BugÃ¼nkÃ¼ Ã–demeler -->
                <Border Grid.Column="0" Background="{StaticResource WarningBrush}" 
                        CornerRadius="12" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“…" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="BugÃ¼nkÃ¼ Ã–demeler" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="TxtBugunkuOdemeler" 
                                   Text="0" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Geciken Taksitler -->
                <Border Grid.Column="1" Background="{StaticResource ErrorBrush}" 
                        CornerRadius="12" Padding="20" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="âš ï¸" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Geciken Taksitler" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="TxtGecikenTaksitler" 
                                   Text="0" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Toplam Geciken Tutar -->
                <Border Grid.Column="2" Background="{StaticResource PrimaryBrush}" 
                        CornerRadius="12" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’°" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Geciken Tutar" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="TxtGecikenTutar" 
                                   Text="0 â‚º" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Filtre ButonlarÄ± -->
            <Border Grid.Row="2" Background="{StaticResource CardBrush}" 
                    CornerRadius="12" Padding="20" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnBugunku" Content="BugÃ¼nkÃ¼ Ã–demeler" 
                            Click="BtnBugunku_Click" 
                            Background="{StaticResource WarningBrush}"
                            Margin="0,0,10,0" Width="150"/>
                    <Button x:Name="BtnGeciken" Content="Geciken Taksitler" 
                            Click="BtnGeciken_Click" 
