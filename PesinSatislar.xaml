<Page x:Class="TelefonSatısApp.PesinSatislar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TelefonSatısApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PesinSatislar"
      Background="#0F172A">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1E3A8A"/>
        <SolidColorBrush x:Key="CardBrush" Color="#111827"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#0B1221"/>
        <SolidColorBrush x:Key="TextLight" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#94A3B8"/>

        <!-- Sayfa içi buton stili -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#172554"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="162.2"/>
            <ColumnDefinition Width="7.8"/>
        </Grid.ColumnDefinitions>

        <!-- Başlık alanı -->
        <Border Grid.Row="0" Grid.ColumnSpan="4" Padding="14,16" Background="{StaticResource SurfaceBrush}">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="0" Opacity="0.28"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="{StaticResource PrimaryBrush}"/>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="Peşin Satışlar"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextLight}"/>
                        <TextBlock Text="Kayıtlı peşin satışları görüntüleyip düzenleyin."
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>
                <Border Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="10,8"
                        Background="{StaticResource PrimaryDarkBrush}"
                        CornerRadius="12">
                    <TextBlock Text="{Binding ElementName=DataGridPesinSatis, Path=Items.Count, StringFormat='Toplam {0} kayıt'}"
                               Foreground="{StaticResource TextLight}"
                               FontSize="13"
                               FontWeight="SemiBold"/>
                </Border>
            </Grid>
        </Border>

        <!-- DataGrid alanı -->
        <DataGrid x:Name="DataGridPesinSatis"
          Grid.Row="1"
          Margin="10,20,10,20"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          Grid.ColumnSpan="2"
          Background="{StaticResource CardBrush}"
          Foreground="{StaticResource TextLight}"
          RowBackground="#0F172A"
          AlternatingRowBackground="#111827"
          BorderBrush="#1F2937"
          BorderThickness="1"
          HeadersVisibility="All">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,10"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="👤 Müşteri Adı Soyadı" Binding="{Binding MusteriAdSoyad}" Width="180">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#E5E7EB"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="📞 Telefon" Binding="{Binding MusteriTelefon}" Width="130"/>
                <DataGridTextColumn Header="📱 Marka" Binding="{Binding Marka}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#3B82F6"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="📱 Model" Binding="{Binding Model}" Width="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#3B82F6"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="🔧 Durum" Binding="{Binding Durum}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#10B981"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="💰 Satış Fiyatı" Binding="{Binding SatisFiyati, StringFormat='{}{0:N0} ₺'}" Width="110">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#22C55E"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="💵 Kar" Binding="{Binding Kar, StringFormat='{}{0:N0} ₺'}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#F59E0B"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="📅 Tarih" Binding="{Binding Tarih, StringFormat='{}{0:dd.MM.yyyy}'}" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,20,10,0" VerticalAlignment="Top">
            <!-- Yenile ve Excel Butonları -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Click="Button_Yenile"
                        Background="#0EA5E9"
                        Width="45" Height="40"
                        Margin="0,0,8,0"
                        ToolTip="Yenile">
                    <TextBlock Text="🔄" FontSize="16" Foreground="White"/>
                </Button>
                <Button Click="Button_ExcelExport"
                        Background="#22C55E"
                        Width="45" Height="40"
                        ToolTip="Excel'e Aktar">
                    <TextBlock Text="📊" FontSize="16" Foreground="White"/>
                </Button>
            </StackPanel>
            
            <Button Content="Satışı Düzenle"
                    Margin="0,0,0,10"
                    Click="Button_SatışıDüzenle"/>
            <Button Content="Satışı Sil"
                    Click="Button_SatışıSil"
                    Background="#DC2626">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#DC2626"/>
                        <Setter Property="Foreground" Value="#F9FAFB"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#7F1D1D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>


    </Grid>
</Page>
