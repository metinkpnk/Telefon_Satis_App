<Window x:Class="TelefonSatısApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Telefon Satış App" Height="520" Width="900"
        Background="#0F172A" WindowStyle="None" ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Renk paleti (fırça olarak) -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#1E40AF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#22C55E"/>
        <SolidColorBrush x:Key="CardColor" Color="#111827"/>
        <SolidColorBrush x:Key="TextLight" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#94A3B8"/>

        <!-- Genel buton stili -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12 10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="0" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkColor}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#172554"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Navbar kapsayıcısı -->
        <Style TargetType="StackPanel" x:Key="NavbarStyle">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <!-- Üst bar butonları -->
        <Style x:Key="ChromeButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1F2937"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#111827"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Üst bar -->
        <Border Grid.Row="0" Background="#0B1221" Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                    <Ellipse Width="10" Height="10" Fill="{StaticResource AccentColor}" Margin="0,0,10,0"/>
                    <TextBlock Text="T&amp;T Kılıf Bank Telefon"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextLight}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Grid.Column="1"
                            Margin="0,0,12,0">
                    <Button Style="{StaticResource ChromeButtonStyle}"
                            Content="—"
                            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource ChromeButtonStyle}"
                            Content="□"
                            Click="MaximizeButton_Click"/>
                    <Button Style="{StaticResource ChromeButtonStyle}"
                            Content="✕"
                            Click="CloseButton_Click"
                            Foreground="#F87171"
                            Margin="6 0 0 0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- İçerik -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="154"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- NAVBAR -->
            <Border Grid.Column="0"
                    CornerRadius="0"
                    Background="#0B1221"
                    Padding="12 14" Margin="0,0,10,0">
                <StackPanel Style="{StaticResource NavbarStyle}" Margin="0,0,11,0">
                    <TextBlock Text="Menü"
                               Foreground="{StaticResource TextMuted}"
                               FontWeight="SemiBold"
                               Margin="6 0 0 6"/>

                    <Button Click="AnaSayfaButton_Click" Background="{StaticResource PrimaryColor}" Height="80" Width="94">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="pack://application:,,,/Resources/anasayfa.png" Width="40" Height="30" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,4"/>
                            <TextBlock Text="Ana Sayfa" Foreground="{StaticResource TextLight}" FontSize="14" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Height="22" HorizontalAlignment="Center">
                                <TextBlock.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-0.251"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Click="PesinSatıslarButton_Click" Height="80" Width="94">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="pack://application:,,,/Resources/pesin.png" Width="40" Height="30" Margin="0,0,0,6"/>
                            <TextBlock Text="Peşin Satışlar" Foreground="{StaticResource TextLight}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Click="TaksitliSatislarButton_Click" Height="80" Width="94">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="pack://application:,,,/Resources/TaksitliSatıs.png" Width="40" Height="30" Margin="0,0,0,6"/>
                            <TextBlock Text="Taksitli Satışlar" Foreground="{StaticResource TextLight}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Click="TaksitTakipButton_Click" Height="80" Width="94">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="pack://application:,,,/Resources/TaksitTakip.png" Width="40" Height="30" Margin="0,0,0,6"/>
                            <TextBlock Text="Taksit Takip" Foreground="{StaticResource TextLight}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Click="GelirGiderButton_Click" Height="80" Width="94">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Source="pack://application:,,,/Resources/GelirGider.png" Width="40" Height="30" Margin="0,0,0,6" Cursor=""/>
                            <TextBlock Text="Gelir Gider" Foreground="{StaticResource TextLight}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Click="BildirimlerButton_Click" Height="80" Width="94">
                        <Grid>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Source="pack://application:,,,/Resources/Bildirim.png" Width="40" Height="30" Margin="0,0,0,6" Cursor=""/>
                                <TextBlock Text="Bildirimler" Foreground="{StaticResource TextLight}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <!-- Bildirim Badge -->
                            <Border x:Name="NotificationBadge"
                                    Background="#EF4444"
                                    CornerRadius="10"
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,8,8,0"
                                    Visibility="Collapsed">
                                <TextBlock x:Name="NotificationCount"
                                           Text="0"
                                           Foreground="White"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Ana içerik alanı -->
            <Border Grid.Column="1"
                    Margin="0,0,16,16"
                    Background="{StaticResource CardColor}"
                    CornerRadius="18"
                    Padding="14">
                <Frame x:Name="MainContent"
                       NavigationUIVisibility="Hidden"
                       Background="{StaticResource CardColor}" Margin="-4,-4,0,0"/>
            </Border>
        </Grid>
    </Grid>
</Window>
