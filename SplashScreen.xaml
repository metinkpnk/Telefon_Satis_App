<Window x:Class="TelefonSatısApp.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="T&amp;T Kılıf Bank Telefon"
        Height="300" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">

    <Window.Resources>
        <!-- Loading Animation -->
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingRing"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0" To="360" Duration="0:0:1.2"/>
        </Storyboard>

        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetName="MainGrid"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.4"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource LoadingAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="MainGrid" Opacity="0">
        <!-- Background with gradient -->
        <Border Background="#0F172A" CornerRadius="20" Margin="0,-18,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.8"/>
            </Border.Effect>
        </Border>

        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Logo Container -->
            <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Loading Ring -->
                <Ellipse x:Name="LoadingRing"
                         Width="200" Height="200"
                         Stroke="#2563EB"
                         StrokeThickness="3"
                         StrokeDashArray="15 8"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <!-- Outer Ring -->
                <Ellipse Width="185" Height="185"
                         Stroke="#1E293B"
                         StrokeThickness="2"
                         Opacity="0.5"/>

                <!-- Logo Background -->
                <Ellipse Width="170" Height="170"
                         Fill="#111827">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                    </Ellipse.Effect>
                </Ellipse>

                <!-- Logo Image -->
                <Border Width="140" Height="140"
                        CornerRadius="70"
                        ClipToBounds="True">
                    <Grid>
                        <!-- Fallback Logo Text -->
                        <Border Background="#1E293B" CornerRadius="70">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="T&amp;T"
                                           Foreground="#2563EB"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="KILIF BANK"
                                           Foreground="#E5E7EB"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="TELEFON"
                                           Foreground="#94A3B8"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           Margin="0,1,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Actual Logo Image (will show when available) -->
                        <Image x:Name="LogoImage"
                               Source="Resources/logo.jpg"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Company Name -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,15,0,0">
                <TextBlock Text="T&amp;T KILIF BANK TELEFON"
                           Foreground="#E5E7EB"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Telefon Satış Yönetim Sistemi"
                           Foreground="#94A3B8"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Loading Text -->
            <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="LoadingText"
                           Text="Yükleniyor..."
                           Foreground="#2563EB"
                           FontSize="14"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                
                <!-- Progress Dots -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <Ellipse x:Name="Dot1" Width="8" Height="8" Fill="#2563EB" Margin="2">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Window.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.5"
                                                         BeginTime="0:0:0"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse x:Name="Dot2" Width="8" Height="8" Fill="#2563EB" Margin="2">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Window.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.5"
                                                         BeginTime="0:0:0.15"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                    <Ellipse x:Name="Dot3" Width="8" Height="8" Fill="#2563EB" Margin="2">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Window.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="1" Duration="0:0:0.5"
                                                         BeginTime="0:0:0.3"
                                                         AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>