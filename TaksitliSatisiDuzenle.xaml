                    </Grid>
                </Grid>
            </Border>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="18,0,18,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="VazgeÃ§"
                    Grid.Column="0"
                    Background="#1E293B"
