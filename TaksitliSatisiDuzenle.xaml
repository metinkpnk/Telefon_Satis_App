                                 PreviewTextInput="OnOdemeTextBox_PreviewTextInput"/>
                    </StackPanel>

                    <StackPanel Grid.Row="6" Margin="0,6,0,0">
                        <TextBlock Text="AylÄ±k Ã–deme"
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="12"/>
                        <TextBox x:Name="AylikOdemeTextBox" 
                                 TextChanged="AylikOdemeTextBox_TextChanged"
                                 PreviewTextInput="AylikOdemeTextBox_PreviewTextInput"/>
                    </StackPanel>

                    <Grid Grid.Row="7" Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
