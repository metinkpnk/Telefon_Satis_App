<Window x:Class="TelefonSatısApp.PesinSatisiDuzenle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Peşin Satışı Düzenle"
        Height="540"
        Width="520"
        Background="#0F172A"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1E40AF"/>
        <SolidColorBrush x:Key="CardBrush" Color="#111827"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#0B1221"/>
        <SolidColorBrush x:Key="TextLight" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#94A3B8"/>

        <!-- ScrollBar Stili -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#374151"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Margin="2"/>
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="True"
                                   Grid.Row="1">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#4B5563"
                                                        CornerRadius="6"
                                                        Margin="2">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#6B7280"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="0" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#172554"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,6,0,14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="Background" Value="#0B1221"/>
                    <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="0,6,0,14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="44"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="Border"
                                    Grid.ColumnSpan="2"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"/>

                            <DatePickerTextBox x:Name="PART_TextBox"
                                               Grid.Column="0"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Foreground="{TemplateBinding Foreground}"
                                               HorizontalContentAlignment="Left"
                                               VerticalContentAlignment="Center"
                                               Padding="10,0"/>

                            <Button x:Name="PART_Button"
                                    Grid.Column="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{StaticResource TextLight}"
                                    FontSize="14"
                                    Content="📅"
                                    Cursor="Hand"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DatePickerTextBox">
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="86"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" MouseDown="TitleBar_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="18,0,18,0">
                    <Ellipse Width="10" Height="10" Fill="{StaticResource PrimaryBrush}" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Peşin Satışı Düzenle"
                                   Foreground="{StaticResource TextLight}"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Bilgileri kontrol edip kaydedin."
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>
                <Button Grid.Column="1"
                        Content="✕"
                        Width="34"
                        Height="34"
                        Background="Transparent"
                        Foreground="#F87171"
                        BorderThickness="0"
                        Click="CloseButton_Click"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Margin="18,12,18,12"
                Padding="22"
                Background="{StaticResource CardBrush}"
                CornerRadius="18">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="16" ShadowDepth="0" Opacity="0.35"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly">
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Telefon Bilgileri -->
                <Border Grid.Row="0" 
                        Background="#0F172A"
                        BorderBrush="#1E293B"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="14"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Telefon Bilgileri"
                                   Foreground="{StaticResource TextLight}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="Marka" Foreground="{StaticResource TextMuted}" FontSize="11"/>
                                <TextBox x:Name="MarkaTextBox" IsReadOnly="True" Height="36" Margin="0,4,0,0" FontSize="13"/>
                            </StackPanel>
                            
                            <StackPanel Margin="0,0,0,8">
                                <TextBlock Text="Model" Foreground="{StaticResource TextMuted}" FontSize="11"/>
                                <TextBox x:Name="ModelTextBox" IsReadOnly="True" Height="36" Margin="0,4,0,0" FontSize="13"/>
                            </StackPanel>
                            
                            <StackPanel>
                                <TextBlock Text="Durum" Foreground="{StaticResource TextMuted}" FontSize="11"/>
                                <TextBox x:Name="DurumTextBox" IsReadOnly="True" Height="36" Margin="0,4,0,0" FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="Satış Fiyatı"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="12"/>
                    <TextBox x:Name="SatisFiyatiTextBox" 
                             TextChanged="SatisFiyatiTextBox_TextChanged"
                             PreviewTextInput="SatisFiyatiTextBox_PreviewTextInput"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Müşteri Adı"
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="12"/>
                        <TextBox x:Name="MusteriAdTextBox"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text="Müşteri Soyadı"
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="12"/>
                        <TextBox x:Name="MusteriSoyadTextBox"/>
                    </StackPanel>
                </Grid>

                <StackPanel Grid.Row="3" Margin="0,4,0,0">
                    <TextBlock Text="Müşteri Telefonu"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="12"/>
                    <TextBox x:Name="MusteriTelefonTextBox"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Margin="0,4,0,0">
                    <TextBlock Text="Kar"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="12"/>
                    <TextBox x:Name="KarTextBox" 
                             TextChanged="KarTextBox_TextChanged"
                             PreviewTextInput="KarTextBox_PreviewTextInput"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Margin="0,4,0,0">
                    <TextBlock Text="Satış Tarihi (GG.AA.YYYY)"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="12"/>
                    <TextBox x:Name="TarihTextBox" 
                             ToolTip="Örnek: 15.12.2024"/>
                </StackPanel>
            </Grid>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2" Margin="18,0,18,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Vazgeç"
                    Grid.Column="0"
                    Background="#1E293B"
                    Foreground="{StaticResource TextLight}"
                    Click="CloseButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Kaydet"
                    Grid.Column="1"
                    Click="Button_Kaydet_Click"
                    Margin="10,0,0,0"/>
        </Grid>
    </Grid>
</Window>
