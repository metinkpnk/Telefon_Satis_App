<Page x:Class="TelefonSatısApp.AnaSyafa"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TelefonSatısApp"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" d:DesignWidth="1280"
      Title="Ana Sayfa" Height="754">

    <Page.Resources>
        <!-- Renk paleti -->
        <Color x:Key="PrimaryColor">#4F46E5</Color>
        <Color x:Key="PrimaryDarkColor">#3730A3</Color>
        <Color x:Key="SurfaceColor">#111827</Color>
        <Color x:Key="CardColor">#1F2937</Color>
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}"/>

        <!-- Modern buton -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="8" Opacity="0.35"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#241f78"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="6" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderBrush" Value="#0B1220"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="#111827"/>
            <Setter Property="AlternatingRowBackground" Value="#0F172A"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#1F2937"/>
            <Setter Property="VerticalGridLinesBrush" Value="#1F2937"/>
            <Setter Property="ColumnHeaderHeight" Value="42"/>
            <Setter Property="RowHeight" Value="38"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#111827"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="#1F2937"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Seçili satır görünümü -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#0F172A"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#25355a"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="0,0,0,-38">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B1120" Offset="0"/>
                <GradientStop Color="#111827" Offset="0.4"/>
                <GradientStop Color="#0F172A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="720"/>
        </Grid.RowDefinitions>

        <!-- Üst başlık alanı -->
        <Border Margin="18,18,18,623"
                Padding="14,10"
                Background="{StaticResource CardBrush}"
                CornerRadius="16">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" BlurRadius="14" Opacity="0.4"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="Telefon Satış Paneli"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Envanterinizi yönetin, satışları takip edin."
                               Margin="0,2,0,0"
                               FontSize="11"
                               Foreground="#94A3B8"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#0F172A" CornerRadius="10" Padding="10,8" BorderBrush="#1E293B" BorderThickness="1" Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Toplam Cihaz" Foreground="#94A3B8" FontSize="11"/>
                            <TextBlock Text="{Binding Items.Count, ElementName=DataGridTelefonlar}" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#0F172A" CornerRadius="10" Padding="10,8" BorderBrush="#1E293B" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat={}{0:dd MMM yyyy}}" Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text=" • " Foreground="#64748B" FontSize="14" VerticalAlignment="Center" Margin="6,0"/>
                            <TextBlock x:Name="ClockText" Text="--:--:--" Foreground="#38BDF8" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- İçerik alanı -->
        <Grid Margin="18,123,18,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1.1*"/>
            </Grid.ColumnDefinitions>

            <!-- Sol: liste ve arama -->
            <Border Background="{StaticResource CardBrush}"
                    CornerRadius="16"
                    Padding="16" Grid.ColumnSpan="2" Margin="0,-17,238,-78">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" BlurRadius="16" Opacity="0.45"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="63"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- Arama ve filtre -->
                    <DockPanel Margin="0,0,0,5" LastChildFill="False" RenderTransformOrigin="0.624,0.544">
                        <!-- Arama Kutusu -->
                        <Grid Width="220" DockPanel.Dock="Left" Margin="0,0,10,0" VerticalAlignment="Center">
                            <TextBox x:Name="SearchBox"
                                     Background="#0F172A"
                                     Foreground="White"
                                     BorderBrush="#1E293B"
                                     BorderThickness="1"
                                     Padding="12,8"
                                     FontSize="14"
                                     TextChanged="SearchBox_TextChanged"
                                     ToolTip="IMEI, Marka veya Model ara"/>
                            <TextBlock Text="IMEI, Marka, Model ara..."
                                       Foreground="#94A3B8"
                                       FontSize="14"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        <!-- Yenile ve Excel Butonları -->
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="10,0,0,0">
                            <Button Click="Button_Yenile"
                                    Background="#0EA5E9"
                                    Width="50" Height="46"
                                    Margin="0,0,8,0"
                                    ToolTip="Yenile">
                                <TextBlock Text="🔄" FontSize="18" Foreground="White"/>
                            </Button>
                            <Button Click="Button_ExcelExport"
                                    Background="#22C55E"
                                    Width="50" Height="46"
                                    ToolTip="Excel'e Aktar">
                                <TextBlock Text="📊" FontSize="18" Foreground="White"/>
                            </Button>
                        </StackPanel>
                    </DockPanel>

                    <DataGrid x:Name="DataGridTelefonlar"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="🔢 IMEI" Binding="{Binding Imei}" Width="160">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#E5E7EB"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="📱 Marka" Binding="{Binding Marka}" Width="140">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#3B82F6"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="📱 Model" Binding="{Binding Model}" Width="160">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#3B82F6"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="🔧 Durum" Binding="{Binding Durum}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#10B981"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="🎨 Renk" Binding="{Binding Renk}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#EC4899"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="🛡️ Garanti (Ay)" Binding="{Binding GarantiAy}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#8B5CF6"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="📅 Çıkış Yılı" Binding="{Binding CikisYili}" Width="110">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#06B6D4"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="💰 Alınan Fiyat" Binding="{Binding AlinanFiyat, StringFormat='{}{0:N0} ₺'}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#F59E0B"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Sağ: aksiyon paneli -->
            <Border Grid.Column="1"
                    Margin="117,-17,0,-78"
                    Background="{StaticResource CardBrush}"
                    CornerRadius="16"
                    Padding="16">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" BlurRadius="16" Opacity="0.45"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="İşlemler"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Sık kullanılan aksiyonlara hızlı erişim."
                               Foreground="#94A3B8"
                               FontSize="12"
                               Margin="0,0,0,12"/>

                    <Separator Margin="0,0,0,10" Background="#1E293B" Height="1"/>

                    <Button Content="Telefon Ekle" Click="Button_Ekle"/>
                    <Button Content="Telefon Güncelle" Click="Button_Güncelle" Background="#22C55E"/>
                    <Button Content="Telefon Sil" Click="Button_Sil" Background="#EF4444"/>
                    <Button Content="Peşin Satış" Click="Button_PeşinSatış" Background="#0EA5E9"/>
                    <Button Content="Taksitli Satış" Click="Button_TaksitliSatış" Background="#F97316"/>

                    <Separator Margin="0,12,0,10" Background="#1E293B" Height="1"/>
                    <TextBlock Text="Bugün Ödenecek Taksitler"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="Müşteri adı ve telefon bilgisi listelenir."
                               Foreground="#94A3B8"
                               FontSize="12"
                               Margin="0,0,0,10"/>

                    <ListBox x:Name="ItemsHatirlatma"
                             Height="201"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="178">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#0F172A"
                                        CornerRadius="10"
                                        Padding="10"
                                        Margin="0,0,0,8"
                                        BorderBrush="#1E293B"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding MusteriAdSoyad}"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"/>
                                        <TextBlock Text="{Binding Telefon}"
                                                   Foreground="#94A3B8"
                                                   Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding VadeTarihi, StringFormat='Vade: {0:dd.MM.yyyy}'}"
                                                   Foreground="#94A3B8"
                                                   FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>


                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page> 

